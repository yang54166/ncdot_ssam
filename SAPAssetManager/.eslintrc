{
    "env" : {
        "browser" : true,
        "node" : true,
        "es6" : true
    },
    "rules" : {
        "no-undef" : 2,
        "no-unused-vars" : 2,
        "indent": 0,
        "no-multi-spaces": 0,
        "no-useless-escape": 0
    },

    "parserOptions": {
        "ecmaVersion": 2019,
        "sourceType": "module",
    	"ecmaFeatures": {
	        "modules": true
        },
        "spread" : true,
        "restParams" : true
    }
 }
